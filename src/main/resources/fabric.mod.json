{
  "schemaVersion": 1,
  "id": "mcgltf",
  "version": "${version}",

  "name": "MCglTF",
  "description": "A glTF model loader library based on JglTF for Minecraft.",
  "authors": [
    "TimLee9024", "Protoxy"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/mcgltf",
    "sources": "https://github.com/ModularMods/MCglTF/1.19-Fabric",
    "issues": "https://github.com/ModularMods/MCglTF/issues"
  },

  "license": "MIT",
  "icon": "assets/mcgltf/icon.png",

  "environment": "client",
  "entrypoints": {
    "main": [
      "com.modularmods.mcgltf.MCglTF"
    ]
  },
  "mixins": [
    "mcgltf.mixins.json",
    "mcgltf.iris.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": ["1.19", "1.19.1", "1.19.2"],
    "java": ">=17"
  },
  "suggests": {
    "optifabric": "*",
    "iris": ">=1.4.0"
  }
}
